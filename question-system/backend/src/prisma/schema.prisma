generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int        @id @default(autoincrement())
  email        String     @unique
  password     String
  name         String
  role         Role       @default(STUDENT)
  nickname     String?
  showNickname Boolean    @default(false)
  questions    Question[] @relation("QuestionAuthor")
  answers      Answer[]
  lectures     Lecture[]
  createdAt    DateTime   @default(now())
}

model Lecture {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  teacher     User       @relation(fields: [teacherId], references: [id])
  teacherId   Int
  questions   Question[]
  tags        Tag[]
  createdAt   DateTime   @default(now())
}

model Question {
  id           Int              @id @default(autoincrement())
  title        String
  content      String
  author       User             @relation("QuestionAuthor", fields: [authorId], references: [id])
  authorId     Int
  lecture      Lecture          @relation(fields: [lectureId], references: [id])
  lectureId    Int
  answers      Answer[]
  tags         Tag[]            @relation("QuestionTags")
  images       QuestionImage[]
  resolved     Boolean          @default(false)
  showNickname Boolean          @default(false)
  createdAt    DateTime         @default(now())
}

model QuestionImage {
  id         Int      @id @default(autoincrement())
  filename   String
  path       String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId Int
  createdAt  DateTime @default(now())
}

model Answer {
  id         Int      @id @default(autoincrement())
  content    String
  author     User     @relation(fields: [authorId], references: [id])
  authorId   Int
  question   Question @relation(fields: [questionId], references: [id])
  questionId Int
  createdAt  DateTime @default(now())
}

model Tag {
  id        Int        @id @default(autoincrement())
  name      String
  lecture   Lecture    @relation(fields: [lectureId], references: [id], onDelete: Cascade)
  lectureId Int
  questions Question[] @relation("QuestionTags")
  createdAt DateTime   @default(now())

  @@unique([name, lectureId])
}

enum Role {
  TEACHER
  STUDENT
}
